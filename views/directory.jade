doctype 5
html(lang="en")
	head
		include meta.html
		title= cwdSmall
		include css/pure-0.2.1.min.css
		include css/directory.less
		include js/directory.coffee
	body
		.pure-g-r.content
			.pure-u-1-5#list
				.title
					h3(title=cwd)= cwdSmall
				each folder in dirList
					if folder[0] == "."
						.folder.hidden
							h4= folder
					else
						.folder
							h4= folder
				each file, index in fileList
					- var filePath = cwd + file;
					if index == 0
						.files-item.selected(data-path=filePath)
							h4= file
							p= infoList[index]
					else
						.files-item(data-path=filePath)
							h4= file
							p= infoList[index]
			.pure-u-4-5#main
			#status Connecting...