- title = title.replace(/&/g, "&amp;");
- title = title.replace(/</g, "&lt;");
- title = title.replace(/>/g, "&gt;");
//- For line breaks
- title = title.replace(/\//g, "/<wbr>");
.title
	h3(title=cwd)!= title
if cwdSmall != "/"
	.folder
		- var upDir = cwdSmall.split("/");
		- upDir.pop();
		- upDir.pop();
		- upDir = "/" + upDir.join("/") + "/";
